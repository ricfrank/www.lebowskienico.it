{% extends '::base.html.twig' %}

{% block title %}
    Contatti | Lebowski & Nico
{% endblock %}

{% block body %}
    <header>
        <h1>Contatti</h1>
    </header>
    
    {% if app.session.hasFlash('blogger-notice') %}
        <div class="blogger-notice">
            {{ app.session.flash('blogger-notice') }}
        </div>
    {% endif %}
    
    <form action="{{ path('blogger_blog_page_contact') }}" method="post">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}
        
        <input type="submit" value="Invia" />
    </form>
{% endblock %}
